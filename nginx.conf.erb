worker_processes 1;
error_log stderr;
pid nginx.pid;
daemon off;

events {
	worker_connections 768;
}

http {
	include mime.types;
	server {
		listen <%= ENV['PORT'] %>;
		server_name  _;
		root /app/www;
		index index.html;
		auth_basic "Restricted";
		auth_basic_user_file /app/www/.htpasswd;
		charset utf-8;
	}
}
